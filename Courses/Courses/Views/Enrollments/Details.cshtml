@model IEnumerable<Courses.Models.Enrollment>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registered Courses</h2>


@{
    int i = 0;
}
@foreach (var item in Model)
{
    if (i<1)
    {
        <h3>Student Name:  @Html.DisplayFor(modelItem => item.Student.FirstName) @Html.DisplayFor(modelItem => item.Student.LastName)</h3>
        i++;

    }



}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TermCode)
        </th>
